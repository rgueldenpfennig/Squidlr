@inject NavigationManager NavigationManager

<meta name="keywords" content="@SeoProperties.KeywordsFor(PlatformName)" />
<meta name="description" content="@SeoProperties.DescriptionFor(PlatformName)" />
<meta name="og:title" content="@(SeoProperties.CreatePageTitle(PlatformName))" />
<meta name="og:description" content="@SeoProperties.DescriptionFor(PlatformName)" />
<meta name="og:url" content="@(NavigationManager.Uri)" />
<meta name="twitter:title" content="@(SeoProperties.CreatePageTitle(PlatformName))" />
<meta name="twitter:description" content="@SeoProperties.DescriptionFor(PlatformName)" />

@code {
    [Parameter]
    public required string PlatformName { get; set; }
}
