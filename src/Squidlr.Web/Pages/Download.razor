@page "/download"

@using DotNext;
@using Microsoft.AspNetCore.WebUtilities;
@using Microsoft.Extensions.Options;
@using System.Net;
@using Serilog.Context;
@using Squidlr.Twitter;
@using Squidlr.Twitter.Utilities;
@using Squidlr.Web.Clients;
@using Squidlr.Web.States;
@using Squidlr.Web.Telemetry;
@using Squidlr;

@inject ILogger<Download> Logger
@inject NavigationManager NavigationManager
@inject RequestVideoState RequestVideoState
@inject ApiClient ApiClient
@inject IOptions<ApplicationOptions> ApplicationOptions
@inject IHostEnvironment HostEnvironment
@inject IJSRuntime JS
@inject TelemetryHandler TelemetryHandler
@inject UrlResolver UrlResolver

@implements IDisposable

<head>
    <meta name="robots" content="noindex, nofollow" />
</head>

<PageTitle>@(SeoProperties.CreatePageTitle("Download"))</PageTitle>

<div class="d-flex flex-column align-items-center justify-content-center">
    @if (content is TwitterContent twitterContent)
    {
        <TwitterContentView TwitterContent="@twitterContent" />
    }

    @if (errorMessage is not null)
    {
        <h2 class="text-center mt-4">Oh no! Something went wrong :-(</h2>
        <div class="alert alert-warning" role="alert">@errorMessage</div>
    }

    <div class="container mt-4">
        <h2 class="text-center">Want to download another video?</h2>

        <VideoSearchQuery />
    </div>

    <BusyIndicator IsBusy="@isBusy" />
</div>

@code {
    [Parameter]
    [SupplyParameterFromQuery(Name = "url")]
    public string? Url { get; set; }

    private Content? content;

    private bool isBusy = true;

    private string? errorMessage;

    private CancellationTokenSource cts = new CancellationTokenSource();

    protected override async Task OnParametersSetAsync()
    {
        isBusy = true;
        content = null;
        errorMessage = null;
        RequestVideoState.Url = Url;

        var platform = UrlResolver.ResolveUrl(Url);
        if (Url == null || platform == SocialMediaPlatform.Unknown)
        {
            NavigationManager.NavigateTo("/");
            return;
        }

        try
        {
            var response = await ApiClient.GetContentAsync(Url, platform, cts.Token);

            if (response.IsSuccessful)
            {
                content = response.Value;
            }
            else
            {
                SetErrorMessage(response.Error);
            }
        }
        catch (ApiClientException e)
        {
            SetErrorMessage(e);
        }

        isBusy = false;
    }

    private void SetErrorMessage(RequestVideoResult result)
    {
        if (result == RequestVideoResult.Success) return;

        errorMessage = result switch
        {
            RequestVideoResult.NotFound => "Unfortunately the requested post could not be found.",
            RequestVideoResult.NoVideo => "It seems that the post does not contain any video.",
            RequestVideoResult.UnsupportedVideo => "The post contains an embedded video source which is not yet supported.",
            RequestVideoResult.AdultContent => "Age-restricted adult content. This content might not be appropriate for people under 18 years old.",
            RequestVideoResult.AccountSuspended => "The account containing the requested post has been suspended.",
            RequestVideoResult.Protected => "The account owner limits who can view their Posts.",
            RequestVideoResult.GatewayError => "The response from the X servers was not what we expected. We will try to fix that as soon as possible!",
            _ => "There was an unexpected error. We will try to fix that as soon as possible!"
        };
    }

    private void SetErrorMessage(ApiClientException exception)
    {
        errorMessage = exception.StatusCode switch
        {
            HttpStatusCode.TooManyRequests => "You created too many request. Please try again later.",
            _ => "There was an unexpected error. We will try to fix that as soon as possible!"
        };
    }

    void IDisposable.Dispose()
    {
        cts.Dispose();
    }
}
